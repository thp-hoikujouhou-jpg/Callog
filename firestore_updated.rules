rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // âœ… USERS
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // âœ… CONTACTS
    match /contacts/{contactId} {
      allow read, write: if request.auth != null;
    }
    
    // âœ… CHATS
    match /chats/{chatId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == resource.data.user1Id ||
         request.auth.uid == resource.data.user2Id);
      allow create: if request.auth != null;
    }
    
    // âœ… MESSAGES
    match /chats/{chatId}/messages/{messageId} {
      allow read: if request.auth != null &&
        (request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.user1Id ||
         request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.user2Id);
      
      allow create: if request.auth != null &&
        (request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.user1Id ||
         request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.user2Id);
      
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.senderId ||
         (request.auth.uid == resource.data.receiverId && 
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'readAt'])));
      
      allow delete: if request.auth != null && 
        (request.auth.uid == resource.data.senderId ||
         request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.user1Id ||
         request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.user2Id);
    }
    
    // ğŸ”¥ CRITICAL FIX: CALL_NOTIFICATIONS - ç€ä¿¡é€šçŸ¥ç”¨
    match /call_notifications/{notificationId} {
      allow read, write: if true;  // é–‹ç™ºç’°å¢ƒ: å®Œå…¨ã‚¢ã‚¯ã‚»ã‚¹è¨±å¯
    }
    
    // ğŸ”¥ CRITICAL FIX: CALLS - Agoraé€šè©±ç”¨
    match /calls/{callId} {
      allow read, write: if true;  // é–‹ç™ºç’°å¢ƒ: å®Œå…¨ã‚¢ã‚¯ã‚»ã‚¹è¨±å¯
    }
    
    // âœ… SIGNALING - Simplified for WebRTC
    match /calls/{callId}/signaling/{signalingId} {
      allow read, write: if request.auth != null;
    }
    
    // âœ… ICE CANDIDATES - Simplified
    match /calls/{callId}/callerCandidates/{candidateId} {
      allow read, write: if request.auth != null;
    }
    
    match /calls/{callId}/calleeCandidates/{candidateId} {
      allow read, write: if request.auth != null;
    }
    
    // âœ… WEBRTC_SESSIONS
    match /webrtc_sessions/{sessionId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // âœ… MISSED CALLS
    match /missed_calls/{missedCallId} {
      allow read, write: if request.auth != null;
    }
    
    // âœ… NOTIFICATION REQUESTS
    match /notification_requests/{notificationId} {
      allow read, write: if request.auth != null;
    }
    
    // âœ… CALL RECORDINGS - éŒ²éŸ³ãƒ¡ã‚¿ãƒ‡ãƒ¼ã‚¿
    match /call_recordings/{recordingId} {
      // ãƒ¦ãƒ¼ã‚¶ãƒ¼ã¯è‡ªåˆ†ã®éŒ²éŸ³ã®ã¿èª­ã¿æ›¸ãå¯èƒ½
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create, update: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // âœ… CALL RECORDING NOTIFICATIONS - éŒ²éŸ³é€šçŸ¥ï¼ˆNEW!ï¼‰
    match /call_recording_notifications/{notificationId} {
      // èª°ã§ã‚‚éŒ²éŸ³é€šçŸ¥ã‚’ä½œæˆå¯èƒ½
      allow create: if request.auth != null;
      // é€šçŸ¥å¯¾è±¡è€…ã¨éŒ²éŸ³è€…ãŒèª­ã¿å–ã‚Šå¯èƒ½
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.notifiedUserId ||
         request.auth.uid == resource.data.recordingUserId);
      // ã‚¯ãƒªãƒ¼ãƒ³ã‚¢ãƒƒãƒ—ç”¨
      allow update, delete: if request.auth != null;
    }
    
    // âœ… MEETING NOTES
    match /meeting_notes/{noteId} {
      allow read, write: if request.auth != null;
    }
    
    // âœ… CALL STATES - ãƒªã‚¢ãƒ«ã‚¿ã‚¤ãƒ é€šè©±çŠ¶æ…‹ã®åŒæœŸ
    match /call_states/{stateId} {
      allow read, write: if request.auth != null;
    }
    
    // âœ… CALL HISTORY - é€šè©±å±¥æ­´ã®ä¿å­˜
    match /call_history/{historyId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.callerId || 
         request.auth.uid == resource.data.receiverId);
    }
    
    // âœ… FRIEND REQUESTS - å‹é”ãƒªã‚¯ã‚¨ã‚¹ãƒˆç®¡ç†
    match /friend_requests/{requestId} {
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.senderId || 
         request.auth.uid == resource.data.receiverId);
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.senderId || 
         request.auth.uid == resource.data.receiverId);
    }
    
    // ğŸ”¥ NEW: FCM TOKENS - ãƒ—ãƒƒã‚·ãƒ¥é€šçŸ¥ç”¨ãƒˆãƒ¼ã‚¯ãƒ³
    match /fcm_tokens/{userId} {
      allow read: if true;  // èª°ã§ã‚‚èª­ã¿å–ã‚Šå¯èƒ½ï¼ˆé€šçŸ¥é€ä¿¡ã®ãŸã‚ï¼‰
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
